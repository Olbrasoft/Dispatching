<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>Net6.0;Net7</TargetFrameworks>
		<LangVersion>11</LangVersion>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>Olbrasoft.Dispatching.Extensions.Microsoft.DependencyInjection</AssemblyName>
		<RootNamespace>Olbrasoft.Extensions.DependencyInjection</RootNamespace>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Title>Is used to easily register classes needed by dispatching </Title>
		<IncludeSymbols>True</IncludeSymbols>
		<Version>1.7.0</Version>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
		<PackageReference Include="Olbrasoft.Extensions" Version="1.0.7" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Dispatching\Dispatching.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="System" />
		<Using Include="Microsoft.Extensions.DependencyInjection" />
		<Using Include="System.Collections.Generic" />
		<Using Include="System.Linq" />
		<Using Include="System.Reflection" />
		<Using Include="Olbrasoft.Dispatching" />
	</ItemGroup>

</Project>
